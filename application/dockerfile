# Use the official Node.js image as the base image
FROM node:22.14 AS frontend

# Set the working directory for the frontend
WORKDIR /app/frontend

# Copy frontend package files and install dependencies
COPY frontend/package*.json ./
RUN npm install

# Copy the rest of the frontend code
COPY frontend/ .

# Build the frontend application
RUN npm run build

# Use the official Python 3.12 image as the base image
FROM python:3.12 AS backend

# Install the required system packages
RUN apt-get update
RUN apt-get install -y ffmpeg git cmake libdbus-1-dev libgirepository1.0-dev gfortran libopenblas-dev
RUN apt-get clean

# Install pip dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel
RUN pip install --no-cache-dir --upgrade cython Cython
RUN pip install --no-cache-dir git+https://github.com/CPJKU/madmom

# Set the working directory for the backend
WORKDIR /app/backend

# Copy backend requirements and install dependencies
COPY backend/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the backend code
COPY backend/ .

# Final stage to combine both frontend and backend
FROM node:18.17

# Copy built frontend from the frontend stage
COPY --from=frontend /app/frontend /app/frontend

# Copy backend from the backend stage
COPY --from=backend /app/backend /app/backend

# Set the working directory
WORKDIR /app

# Expose ports for frontend and backend
EXPOSE 3000 5000

# Start both frontend and backend
CMD ["sh", "-c", "cd /app/backend && python app.py & cd /app/frontend && npm run start"]

